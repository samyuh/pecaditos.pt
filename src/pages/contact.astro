<style>
	/* Add global box-sizing and overflow prevention */
	* {
		box-sizing: border-box;
	}

	html, body {
		overflow-x: hidden;
		max-width: 100vw;
	}

	/* Contact Hero Section */
	.contact-hero {
		background: linear-gradient(135deg, var(--chocolate-dark) 0%, var(--chocolate-medium) 100%);
		color: var(--warm-white);
		padding: 4rem 0 3rem;
		text-align: center;
		position: relative;
		overflow: hidden;
		width: 100%;
	}

	.contact-hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="40" r="1.5" fill="rgba(255,255,255,0.1)"/><circle cx="40" cy="80" r="1" fill="rgba(255,255,255,0.1)"/></svg>');
		animation: float 20s ease-in-out infinite;
	}

	.page-title {
		font-family: 'Dancing Script', cursive;
		font-size: 3.5rem;
		margin-bottom: 1rem;
		color: var(--gold);
		text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
		position: relative;
		z-index: 1;
		word-wrap: break-word;
		overflow-wrap: break-word;
		hyphens: auto;
	}

	.page-subtitle {
		font-size: 1.1rem;
		opacity: 0.9;
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
		position: relative;
		z-index: 1;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
		width: 100%;
		box-sizing: border-box;
	}

	/* Contact Info Section */
	.contact-info {
		padding: 4rem 0;
		background: var(--warm-white);
		width: 100%;
		overflow: hidden;
	}

	.contact-intro {
		text-align: center;
		margin-bottom: 3rem;
	}

	.contact-intro h2 {
		font-family: 'Dancing Script', cursive;
		font-size: 2.5rem;
		color: var(--chocolate-dark);
		margin-bottom: 1.5rem;
		position: relative;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.contact-intro h2::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 3px;
		background: var(--gold);
		border-radius: 2px;
	}

	.contact-intro p {
		font-size: 1rem;
		color: var(--text-light);
		line-height: 1.7;
		max-width: 700px;
		margin: 0 auto;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.contact-list {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		max-width: 800px;
		margin: 0 auto;
		width: 100%;
	}

	.contact-item {
		display: flex;
		align-items: flex-start;
		gap: 1.5rem;
		padding: 1.5rem;
		background: linear-gradient(135deg, var(--cream), var(--beige-light));
		border-radius: 15px;
		border-left: 4px solid var(--chocolate-light);
		transition: all 0.3s ease;
		box-shadow: 0 4px 15px rgba(60, 36, 21, 0.08);
		width: 100%;
		box-sizing: border-box;
	}

	.contact-item:hover {
		box-shadow: 0 6px 20px rgba(60, 36, 21, 0.12);
		border-left-color: var(--gold);
	}

	.contact-icon {
		font-size: 2.5rem;
		flex-shrink: 0;
		animation: bounce 2s ease-in-out infinite;
	}

	.contact-details {
		flex: 1;
		min-width: 0;
	}

	.contact-details h3 {
		font-family: 'Dancing Script', cursive;
		font-size: 1.5rem;
		color: var(--chocolate-dark);
		margin-bottom: 0.5rem;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.contact-details p {
		color: var(--text-light);
		margin-bottom: 0.8rem;
		font-size: 0.95rem;
		line-height: 1.5;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.contact-link {
		color: var(--chocolate-medium);
		text-decoration: none;
		font-weight: 600;
		font-size: 1rem;
		transition: all 0.3s ease;
		display: inline-block;
		margin-bottom: 0.3rem;
		padding: 0.3rem 0;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.contact-link:hover {
	}

	.contact-link.coming-soon {
		opacity: 0.7;
		font-style: italic;
	}

	.phone-numbers {
		display: flex;
		flex-direction: column;
		gap: 0.3rem;
	}

	/* Contact Form Section */
	.contact-form-section {
		padding: 4rem 0;
		background: linear-gradient(135deg, var(--beige-light), var(--beige-dark));
		width: 100%;
		overflow: hidden;
	}

	.form-content {
		max-width: 700px;
		margin: 0 auto;
		width: 100%;
		box-sizing: border-box;
	}

	.form-intro {
		text-align: center;
		margin-bottom: 2.5rem;
	}

	.form-intro h2 {
		font-family: 'Dancing Script', cursive;
		font-size: 2.5rem;
		color: var(--chocolate-dark);
		margin-bottom: 1.5rem;
		position: relative;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.form-intro h2::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 3px;
		background: var(--gold);
		border-radius: 2px;
	}

	.form-intro p {
		font-size: 1rem;
		color: var(--text-light);
		line-height: 1.7;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.contact-form {
		background: var(--warm-white);
		padding: 2.5rem;
		border-radius: 20px;
		box-shadow: 0 10px 30px rgba(60, 36, 21, 0.1);
		border: 2px solid transparent;
		transition: all 0.3s ease;
		width: 100%;
		box-sizing: border-box;
		margin: 0;
	}

	.contact-form:hover {
		border-color: var(--chocolate-light);
		box-shadow: 0 15px 40px rgba(60, 36, 21, 0.15);
	}

	.form-row {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1.2rem;
		margin-bottom: 1.2rem;
		width: 100%;
	}

	.form-group {
		display: flex;
		flex-direction: column;
		min-width: 0;
	}

	.form-group label {
		font-weight: 600;
		color: var(--chocolate-dark);
		margin-bottom: 0.5rem;
		font-size: 0.95rem;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.form-group input,
	.form-group select,
	.form-group textarea {
		padding: 1rem;
		border: 2px solid var(--beige-dark);
		border-radius: 10px;
		font-size: 0.95rem;
		font-family: 'Poppins', sans-serif;
		transition: all 0.3s ease;
		background: var(--cream);
		width: 100%;
		box-sizing: border-box;
		min-width: 0;
	}

	.form-group input:focus,
	.form-group select:focus,
	.form-group textarea:focus {
		outline: none;
		border-color: var(--chocolate-medium);
		box-shadow: 0 0 0 3px rgba(93, 64, 55, 0.1);
		background: var(--warm-white);
	}

	.form-group textarea {
		resize: vertical;
		min-height: 120px;
	}

	/* Contact Extra Section */
	.contact-extra {
		padding: 4rem 0;
		background: var(--warm-white);
		width: 100%;
		overflow: hidden;
	}

	.extra-content {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 3rem;
		align-items: center;
		width: 100%;
	}

	.extra-text h2 {
		font-family: 'Dancing Script', cursive;
		font-size: 2.5rem;
		color: var(--chocolate-dark);
		margin-bottom: 1.5rem;
		position: relative;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.extra-text h2::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 0;
		width: 60px;
		height: 3px;
		background: var(--gold);
		border-radius: 2px;
	}

	.extra-text p {
		color: var(--text-light);
		line-height: 1.7;
		margin-bottom: 1.2rem;
		font-size: 1rem;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.extra-text strong {
		color: var(--chocolate-dark);
		font-weight: 600;
	}

	.response-time {
		display: flex;
		flex-direction: column;
		gap: 0.8rem;
		margin-top: 1.5rem;
		width: 100%;
	}

	.time-item {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 0.8rem;
		background: linear-gradient(135deg, var(--cream), var(--beige-light));
		border-radius: 12px;
		transition: all 0.3s ease;
		width: 100%;
		box-sizing: border-box;
	}

	.time-item:hover {
		background: linear-gradient(135deg, var(--beige-light), var(--cream));
	}

	.time-icon {
		font-size: 1.3rem;
		flex-shrink: 0;
	}

	.time-item span:last-child {
		font-weight: 600;
		color: var(--chocolate-dark);
		font-size: 0.95rem;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.extra-visual {
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
		width: 100%;
	}

	.support-illustration {
		position: relative;
		width: 200px;
		height: 200px;
		display: flex;
		align-items: center;
		justify-content: center;
		max-width: 100%;
	}

	.support-icon {
		font-size: 4rem;
		animation: pulse 3s ease-in-out infinite;
	}

	.floating-hearts {
		position: absolute;
		width: 100%;
		height: 100%;
	}

	.floating-hearts span {
		position: absolute;
		font-size: 1.5rem;
		animation: float 4s ease-in-out infinite;
	}

	.floating-hearts span:nth-child(1) {
		top: 20%;
		left: 20%;
		animation-delay: 0s;
	}

	.floating-hearts span:nth-child(2) {
		top: 60%;
		right: 15%;
		animation-delay: 1.5s;
	}

	.floating-hearts span:nth-child(3) {
		bottom: 25%;
		left: 15%;
		animation-delay: 3s;
	}

	/* Button Styles */
	.btn {
		padding: 1rem 2rem;
		border-radius: 50px;
		text-decoration: none;
		font-weight: 600;
		transition: all 0.3s ease;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		border: 2px solid transparent;
		cursor: pointer;
		font-size: 1rem;
		font-family: 'Poppins', sans-serif;
		box-sizing: border-box;
	}

	.btn-primary {
		background: linear-gradient(45deg, var(--chocolate-medium), var(--chocolate-dark));
		color: var(--warm-white);
		box-shadow: 0 4px 15px rgba(60, 36, 21, 0.3);
		border: none;
		width: 100%;
		justify-content: center;
		margin-top: 1.2rem;
	}

	.btn-primary:hover {
		box-shadow: 0 6px 20px rgba(60, 36, 21, 0.4);
		background: linear-gradient(45deg, var(--chocolate-dark), var(--chocolate-medium));
	}

	.btn-icon {
		font-size: 1.1rem;
	}

	/* Animations */
	@keyframes float {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-15px); }
	}

	@keyframes bounce {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-8px); }
	}

	@keyframes pulse {
		0%, 100% { transform: scale(1); }
		50% { transform: scale(1.05); }
	}

	/* Mobile-First Responsive Design */
	@media (max-width: 768px) {
		.contact-hero {
			padding: 3rem 0;
			overflow-x: hidden;
		}

		.page-title {
			font-size: 3rem;
			word-wrap: break-word;
			overflow-wrap: break-word;
			hyphens: auto;
		}

		.page-subtitle {
			font-size: 1.1rem;
			word-wrap: break-word;
