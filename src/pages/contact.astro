<style>
	/* CSS Custom Properties for Better Responsiveness */
	:root {
		--container-padding: clamp(1rem, 5vw, 2rem);
		--section-padding: clamp(2rem, 8vw, 4rem);
		--hero-title-size: clamp(2.5rem, 8vw, 4rem);
		--section-title-size: clamp(1.8rem, 5vw, 2.5rem);
		--card-title-size: clamp(1.3rem, 4vw, 1.8rem);
		--text-size: clamp(0.875rem, 2.5vw, 1rem);
		--contact-icon-size: clamp(3rem, 8vw, 4rem);
	}

	/* Add global box-sizing and overflow prevention */
	* {
		box-sizing: border-box;
	}

	html, body {
		overflow-x: hidden;
		max-width: 100vw;
	}

	/* Events Hero (used for contact page header) */
	.events-hero {
		background: linear-gradient(135deg, var(--cream) 0%, var(--beige-light) 50%, var(--beige-dark) 100%);
		padding: var(--section-padding) 0;
		text-align: center;
		position: relative;
		overflow: hidden;
		width: 100%;
	}

	.events-hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="1" fill="rgba(60,36,21,0.1)"/><circle cx="80" cy="40" r="1.5" fill="rgba(60,36,21,0.1)"/><circle cx="40" cy="80" r="1" fill="rgba(60,36,21,0.1)"/></svg>');
		animation: float 25s ease-in-out infinite;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--container-padding);
		width: 100%;
		box-sizing: border-box;
		position: relative;
		z-index: 1;
	}

	.hero-title {
		font-family: 'Dancing Script', cursive;
		font-size: var(--hero-title-size);
		font-weight: 700;
		color: var(--chocolate-dark);
		margin-bottom: 1rem;
		text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	/* Contact Info Section */
	.contact-info {
		padding: var(--section-padding) 0;
		background: var(--warm-white);
		width: 100%;
		overflow: hidden;
	}

	.contact-intro {
		text-align: center;
		margin-bottom: clamp(2rem, 6vw, 3rem);
	}

	.contact-intro h2 {
		font-family: 'Dancing Script', cursive;
		font-size: var(--section-title-size);
		color: var(--chocolate-dark);
		margin-bottom: 1rem;
		position: relative;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.contact-intro h2::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 50%;
		transform: translateX(-50%);
		width: clamp(50px, 12vw, 60px);
		height: 3px;
		background: var(--gold);
		border-radius: 2px;
	}

	.contact-intro p {
		color: var(--text-light);
		line-height: 1.7;
		font-size: var(--text-size);
		max-width: 600px;
		margin: 0 auto;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.contact-list {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(min(300px, 100%), 1fr));
		gap: clamp(1.5rem, 4vw, 2rem);
		width: 100%;
	}

	.contact-item {
		background: linear-gradient(135deg, var(--cream), var(--beige-light));
		padding: clamp(1.5rem, 4vw, 2rem);
		border-radius: 20px;
		box-shadow: 0 8px 25px rgba(60, 36, 21, 0.1);
		transition: all 0.3s ease;
		border: 2px solid transparent;
		position: relative;
		overflow: hidden;
		width: 100%;
		box-sizing: border-box;
		display: flex;
		align-items: flex-start;
		gap: 1.5rem;
	}

	.contact-item::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
		background: linear-gradient(90deg, var(--chocolate-light), var(--chocolate-medium));
		transform: scaleX(0);
		transition: transform 0.3s ease;
	}

	.contact-item:hover {
		box-shadow: 0 15px 35px rgba(60, 36, 21, 0.2);
		border-color: var(--chocolate-light);
	}

	.contact-item:hover::before {
		transform: scaleX(1);
	}

	.contact-icon {
		font-size: var(--contact-icon-size);
		flex-shrink: 0;
		animation: bounce 2s ease-in-out infinite;
	}

	.contact-details {
		flex: 1;
	}

	.contact-item h3 {
		font-family: 'Dancing Script', cursive;
		font-size: var(--card-title-size);
		color: var(--chocolate-dark);
		margin-bottom: 0.5rem;
		line-height: 1.2;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.contact-item p {
		color: var(--text-light);
		line-height: 1.6;
		margin-bottom: 1rem;
		font-size: var(--text-size);
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.contact-link {
		color: var(--chocolate-medium);
		text-decoration: none;
		font-weight: 600;
		font-size: var(--text-size);
		transition: color 0.3s ease;
		display: inline-block;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.contact-link:hover {
		color: var(--chocolate-dark);
	}

	.phone-numbers {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	/* Contact Extra Section */
	.contact-extra {
		padding: var(--section-padding) 0;
		background: linear-gradient(135deg, var(--beige-light) 0%, var(--cream) 100%);
		width: 100%;
		overflow: hidden;
	}

	.extra-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: clamp(2rem, 5vw, 3rem);
		align-items: center;
		width: 100%;
	}

	.extra-text h2 {
		font-family: 'Dancing Script', cursive;
		font-size: var(--section-title-size);
		color: var(--chocolate-dark);
		margin-bottom: 1.5rem;
		position: relative;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.extra-text h2::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 0;
		width: clamp(50px, 12vw, 60px);
		height: 3px;
		background: var(--gold);
		border-radius: 2px;
	}

	.extra-text p {
		color: var(--text-light);
		line-height: 1.7;
		margin-bottom: 1.2rem;
		font-size: var(--text-size);
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.extra-text strong {
		color: var(--chocolate-dark);
		font-weight: 600;
	}

	.response-time {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		margin-top: 1.5rem;
	}

	.time-item {
		display: flex;
		align-items: center;
		gap: 1rem;
		background: rgba(255, 255, 255, 0.5);
		padding: clamp(0.8rem, 2vw, 1rem);
		border-radius: 15px;
		transition: all 0.3s ease;
		border: 1px solid transparent;
	}

	.time-item:hover {
		background: rgba(255, 255, 255, 0.8);
		border-color: var(--chocolate-light);
	}

	.time-icon {
		font-size: clamp(1.2rem, 3vw, 1.5rem);
	}

	.time-item span:last-child {
		font-weight: 600;
		color: var(--chocolate-dark);
		font-size: var(--text-size);
	}

	.extra-visual {
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
		height: clamp(200px, 30vw, 250px);
		width: 100%;
	}

	.support-illustration {
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
		width: clamp(150px, 40vw, 200px);
		height: clamp(150px, 40vw, 200px);
		background: linear-gradient(135deg, var(--cream), var(--beige-light));
		border-radius: 50%;
		box-shadow: 0 15px 30px rgba(60, 36, 21, 0.1);
	}

	.support-icon {
		font-size: clamp(3rem, 8vw, 4rem);
		animation: pulse 3s ease-in-out infinite;
	}

	.floating-hearts {
		position: absolute;
		width: 100%;
		height: 100%;
	}

	.floating-hearts span {
		position: absolute;
		font-size: clamp(1.2rem, 3vw, 1.5rem);
		animation: float 3s ease-in-out infinite;
	}

	.floating-hearts span:nth-child(1) {
		top: 15%;
		left: 15%;
		animation-delay: 0s;
	}

	.floating-hearts span:nth-child(2) {
		top: 25%;
		right: 10%;
		animation-delay: 1s;
	}

	.floating-hearts span:nth-child(3) {
		bottom: 20%;
		left: 20%;
		animation-delay: 2s;
	}

	/* Animations */
	@keyframes float {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-15px); }
	}

	@keyframes bounce {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-8px); }
	}

	@keyframes pulse {
		0%, 100% { transform: scale(1); }
		50% { transform: scale(1.05); }
	}

	/* Responsive Design with Enhanced Breakpoints */
	
	/* Large Tablets and Small Desktops */
	@media (max-width: 1024px) {
		.contact-list {
			grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		}
		
		.extra-content {
			gap: 2rem;
		}
	}

	/* Tablets */
	@media (max-width: 768px) {
		.contact-list {
			grid-template-columns: 1fr;
		}

		.contact-item {
			flex-direction: column;
			text-align: center;
			gap: 1rem;
		}

		.extra-content {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.extra-text h2::after {
			left: 50%;
			transform: translateX(-50%);
		}

		.response-time {
			max-width: 400px;
			margin: 1.5rem auto 0;
		}
	}

	/* Small Tablets and Large Phones */
	@media (max-width: 640px) {
		.contact-item {
			padding: 1.5rem 1rem;
		}

		.phone-numbers {
			text-align: center;
		}
	}

	/* Mobile Phones */
	@media (max-width: 480px) {
		:root {
			--container-padding: 1rem;
			--section-padding: 2rem;
		}

		.contact-item {
			padding: 1.25rem 0.75rem;
		}

		.response-time {
			gap: 0.75rem;
		}

		.time-item {
			padding: 0.75rem;
		}
	}

	/* Small Mobile Phones */
	@media (max-width: 360px) {
		:root {
			--container-padding: 0.75rem;
			--section-padding: 1.5rem;
		}

		.contact-item {
			padding: 1rem 0.5rem;
		}

		.time-item {
			padding: 0.6rem;
		}
	}

	/* Very Small Screens */
	@media (max-width: 320px) {
		:root {
			--container-padding: 0.5rem;
		}

		.contact-item {
			padding: 0.75rem 0.5rem;
		}

		.time-item {
			padding: 0.5rem;
			gap: 0.75rem;
		}
	}

	/* High DPI Displays */
	@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
		.support-illustration {
			image-rendering: -webkit-optimize-contrast;
			image-rendering: crisp-edges;
		}
	}

	/* Landscape orientation for mobile */
	@media (max-height: 500px) and (orientation: landscape) {
		.events-hero {
			padding: 1.5rem 0;
		}

		.extra-visual {
			height: 150px;
		}

		.support-illustration {
			width: 120px;
			height: 120px;
		}
	}

	/* Reduced motion preferences */
	@media (prefers-reduced-motion: reduce) {
		.contact-icon,
		.support-icon,
		.floating-hearts span {
			animation: none;
		}
		
		.events-hero::before {
			animation: none;
		}
	}

	/* Print styles */
	@media print {
		.events-hero,
		.contact-info,
		.contact-extra {
			padding: 1rem 0;
		}
		
		.contact-link {
			color: #000 !important;
			text-decoration: underline;
		}
		
		.contact-icon,
		.support-icon {
			filter: none;
		}
	}
</style>