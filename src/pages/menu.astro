<style>
	/* Menu Hero */
	.menu-hero {
		background: linear-gradient(135deg, var(--cream) 0%, var(--beige-light) 50%, var(--beige-dark) 100%);
		padding: 4rem 0;
		text-align: center;
		position: relative;
		overflow: hidden;
	}

	.menu-hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="1" fill="rgba(60,36,21,0.1)"/><circle cx="80" cy="40" r="1.5" fill="rgba(60,36,21,0.1)"/><circle cx="40" cy="80" r="1" fill="rgba(60,36,21,0.1)"/></svg>');
		animation: float 25s ease-in-out infinite;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.hero-title {
		font-family: 'Dancing Script', cursive;
		font-size: 4rem;
		color: var(--chocolate-dark);
		margin-bottom: 1rem;
		text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
		position: relative;
		z-index: 1;
	}

	.hero-subtitle {
		font-size: 1.3rem;
		color: var(--chocolate-medium);
		opacity: 0.9;
		position: relative;
		z-index: 1;
	}

	/* Menu Content */
	.menu-content {
		padding: 5rem 0;
		background: var(--warm-white);
	}

	.menu-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2.5rem;
	}

	.menu-item {
		background: linear-gradient(135deg, var(--cream), var(--beige-light));
		padding: 3rem 2rem;
		border-radius: 20px;
		text-align: center;
		box-shadow: 0 10px 30px rgba(60, 36, 21, 0.1);
		transition: all 0.3s ease;
		border: 2px solid transparent;
		position: relative;
		overflow: hidden;
	}

	.menu-item::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
		background: linear-gradient(90deg, var(--chocolate-light), var(--chocolate-medium));
		transform: scaleX(0);
		transition: transform 0.3s ease;
	}

	.menu-item:hover {
		transform: translateY(-10px);
		box-shadow: 0 20px 40px rgba(60, 36, 21, 0.15);
		border-color: var(--chocolate-light);
	}

	.menu-item:hover::before {
		transform: scaleX(1);
	}

	.menu-item.featured {
		border-color: var(--gold);
		background: linear-gradient(135deg, #fff9e6, var(--beige-light));
	}

	.menu-item.featured::before {
		background: linear-gradient(90deg, var(--gold), #f4d03f);
		transform: scaleX(1);
	}

	.menu-item.coming-soon {
		opacity: 0.8;
		background: linear-gradient(135deg, #f5f5f5, #e8e8e8);
	}

	.menu-item.coming-soon::before {
		background: linear-gradient(90deg, #bbb, #999);
	}

	.menu-badge {
		position: absolute;
		top: 20px;
		right: 20px;
		background: var(--gold);
		color: var(--chocolate-dark);
		padding: 0.5rem 1rem;
		border-radius: 20px;
		font-size: 0.8rem;
		font-weight: 600;
		text-transform: uppercase;
	}

	.menu-item.coming-soon .menu-badge {
		background: #999;
		color: white;
	}

	.menu-icon {
		font-size: 4rem;
		margin-bottom: 1.5rem;
		display: block;
		animation: bounce 2s ease-in-out infinite;
	}

	.menu-item h3 {
		font-family: 'Dancing Script', cursive;
		font-size: 2.2rem;
		color: var(--chocolate-dark);
		margin-bottom: 1rem;
		line-height: 1.2;
	}

	.menu-item.coming-soon h3 {
		color: #666;
	}

	.menu-item p {
		color: var(--text-light);
		line-height: 1.7;
		font-size: 1rem;
	}

	.menu-item.coming-soon p {
		color: #888;
	}

	/* Menu Info Section */
	.menu-info {
		padding: 5rem 0;
		background: linear-gradient(135deg, var(--beige-light) 0%, var(--cream) 100%);
	}

	.info-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
	}

	.info-text h2 {
		font-family: 'Dancing Script', cursive;
		font-size: 3rem;
		color: var(--chocolate-dark);
		margin-bottom: 2rem;
		position: relative;
	}

	.info-text h2::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 0;
		width: 80px;
		height: 4px;
		background: var(--gold);
		border-radius: 2px;
	}

	.info-text p {
		color: var(--text-light);
		line-height: 1.8;
		margin-bottom: 1.5rem;
		font-size: 1.1rem;
	}

	.info-text strong {
		color: var(--chocolate-dark);
		font-weight: 600;
	}

	.info-highlights {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		margin-top: 2rem;
	}

	.highlight {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1rem;
		background: rgba(255, 255, 255, 0.5);
		border-radius: 15px;
		border-left: 4px solid var(--gold);
		transition: all 0.3s ease;
	}

	.highlight:hover {
		transform: translateX(10px);
		box-shadow: 0 4px 15px rgba(0,0,0,0.1);
	}

	.highlight-icon {
		font-size: 1.5rem;
	}

	.highlight span:last-child {
		font-weight: 600;
		color: var(--chocolate-dark);
	}

	.info-visual {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 400px;
		position: relative;
	}

	.chef-illustration {
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.chef-hat {
		font-size: 6rem;
		animation: bounce 2s ease-in-out infinite;
		filter: drop-shadow(0 4px 8px rgba(0,0,0,0.1));
	}

	.floating-ingredients {
		position: absolute;
		width: 100%;
		height: 100%;
	}

	.ingredient {
		position: absolute;
		font-size: 2.5rem;
		animation: float 3s ease-in-out infinite;
		opacity: 0.8;
	}

	.ingredient:nth-child(1) {
		top: 20%;
		left: 20%;
		animation-delay: 0s;
	}

	.ingredient:nth-child(2) {
		top: 30%;
		right: 15%;
		animation-delay: 1s;
	}

	.ingredient:nth-child(3) {
		bottom: 25%;
		left: 15%;
		animation-delay: 2s;
	}

	/* Animations */
	@keyframes float {
		0%, 100% { transform: translateY(0px) rotate(0deg); }
		50% { transform: translateY(-15px) rotate(5deg); }
	}

	@keyframes bounce {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-10px); }
	}

	/* Mobile-First Responsive Design */
	@media (max-width: 768px) {
		.menu-hero {
			padding: 3rem 0;
		}

		.hero-title {
			font-size: 3rem;
		}

		.hero-subtitle {
			font-size: 1.1rem;
		}

		.menu-content, .menu-info {
			padding: 3rem 0;
		}

		.menu-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.menu-item {
			padding: 2.5rem 1.5rem;
		}

		.menu-item h3 {
			font-size: 2rem;
		}

		.info-content {
			grid-template-columns: 1fr;
			gap: 2.5rem;
			text-align: center;
		}

		.info-text h2 {
			font-size: 2.5rem;
		}

		.info-text h2::after {
			left: 50%;
			transform: translateX(-50%);
		}

		.info-visual {
			height: 300px;
		}

		.chef-hat {
			font-size: 5rem;
		}

		.ingredient {
			font-size: 2rem;
		}

		.info-highlights {
			gap: 0.8rem;
		}

		.highlight {
			padding: 0.8rem;
		}
	}

	@media (max-width: 480px) {
		.container {
			padding: 0 15px;
		}

		.hero-title {
			font-size: 2.5rem;
		}

		.hero-subtitle {
			font-size: 1rem;
		}

		.menu-item {
			padding: 2rem 1.2rem;
		}

		.menu-icon {
			font-size: 3.5rem;
		}

		.menu-item h3 {
			font-size: 1.8rem;
		}

		.info-text h2 {
			font-size: 2.2rem;
		}

		.info-text p {
			font-size: 1rem;
		}

		.chef-hat {
			font-size: 4.5rem;
		}

		.ingredient {
			font-size: 1.8rem;
		}
	}
</style>