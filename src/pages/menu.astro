<style>
	/* CSS Custom Properties for Better Responsiveness */
	:root {
		--container-padding: clamp(1rem, 5vw, 2rem);
		--section-padding: clamp(2rem, 8vw, 4rem);
		--hero-title-size: clamp(2.5rem, 8vw, 4rem);
		--hero-subtitle-size: clamp(1rem, 3vw, 1.2rem);
		--section-title-size: clamp(1.8rem, 5vw, 2.5rem);
		--card-title-size: clamp(1.3rem, 4vw, 1.8rem);
		--text-size: clamp(0.875rem, 2.5vw, 1rem);
		--menu-icon-size: clamp(2.5rem, 8vw, 3.5rem);
	}

	/* Add global box-sizing and overflow prevention */
	* {
		box-sizing: border-box;
	}

	html, body {
		overflow-x: hidden;
		max-width: 100vw;
	}

	/* Menu Hero */
	.menu-hero {
		background: linear-gradient(135deg, var(--cream) 0%, var(--beige-light) 50%, var(--beige-dark) 100%);
		padding: var(--section-padding) 0;
		text-align: center;
		position: relative;
		overflow: hidden;
		width: 100%;
	}

	.menu-hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="1" fill="rgba(60,36,21,0.1)"/><circle cx="80" cy="40" r="1.5" fill="rgba(60,36,21,0.1)"/><circle cx="40" cy="80" r="1" fill="rgba(60,36,21,0.1)"/></svg>');
		animation: float 25s ease-in-out infinite;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--container-padding);
		width: 100%;
		box-sizing: border-box;
		position: relative;
		z-index: 1;
	}

	.hero-title {
		font-family: 'Dancing Script', cursive;
		font-size: var(--hero-title-size);
		font-weight: 700;
		color: var(--chocolate-dark);
		margin-bottom: 1rem;
		text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.hero-subtitle {
		font-size: var(--hero-subtitle-size);
		color: var(--chocolate-medium);
		opacity: 0.9;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	/* Menu Content */
	.menu-content {
		padding: var(--section-padding) 0;
		background: var(--warm-white);
		width: 100%;
		overflow: hidden;
	}

	.menu-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(min(280px, 100%), 1fr));
		gap: clamp(1.5rem, 4vw, 2rem);
		width: 100%;
	}

	.menu-item {
		background: linear-gradient(135deg, var(--cream), var(--beige-light));
		padding: clamp(1.5rem, 4vw, 2rem);
		border-radius: 20px;
		text-align: center;
		box-shadow: 0 8px 25px rgba(60, 36, 21, 0.1);
		transition: all 0.3s ease;
		border: 2px solid transparent;
		position: relative;
		overflow: hidden;
		width: 100%;
		box-sizing: border-box;
	}

	.menu-item::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
		background: linear-gradient(90deg, var(--chocolate-light), var(--chocolate-medium));
		transform: scaleX(0);
		transition: transform 0.3s ease;
	}

	.menu-item:hover {
		box-shadow: 0 15px 35px rgba(60, 36, 21, 0.2);
		border-color: var(--chocolate-light);
	}

	.menu-item:hover::before {
		transform: scaleX(1);
	}

	.menu-item.featured {
		border-color: var(--gold);
		background: linear-gradient(135deg, #fff9e6, var(--beige-light));
	}

	.menu-item.featured::before {
		background: linear-gradient(90deg, var(--gold), #f4d03f);
		transform: scaleX(1);
	}

	.menu-badge {
		position: absolute;
		top: 15px;
		right: 15px;
		background: var(--gold);
		color: var(--chocolate-dark);
		padding: clamp(0.3rem, 1vw, 0.5rem) clamp(0.6rem, 2vw, 0.8rem);
		border-radius: 15px;
		font-size: clamp(0.6rem, 2vw, 0.75rem);
		font-weight: 600;
		text-transform: uppercase;
	}

	.menu-icon {
		width: var(--menu-icon-size);
		height: var(--menu-icon-size);
		margin: 0 auto 1.2rem;
		display: block;
		animation: bounce 2s ease-in-out infinite;
		object-fit: contain;
	}

	.menu-item h3 {
		font-family: 'Dancing Script', cursive;
		font-size: var(--card-title-size);
		color: var(--chocolate-dark);
		margin-bottom: 1rem;
		line-height: 1.2;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.menu-item p {
		color: var(--text-light);
		line-height: 1.6;
		font-size: var(--text-size);
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	/* Menu Info Section */
	.menu-info {
		padding: var(--section-padding) 0;
		background: linear-gradient(135deg, var(--beige-light) 0%, var(--cream) 100%);
		width: 100%;
		overflow: hidden;
	}

	.info-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: clamp(2rem, 5vw, 3rem);
		align-items: center;
		width: 100%;
	}

	.info-text h2 {
		font-family: 'Dancing Script', cursive;
		font-size: var(--section-title-size);
		color: var(--chocolate-dark);
		margin-bottom: 1.5rem;
		position: relative;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.info-text h2::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 0;
		width: clamp(50px, 12vw, 60px);
		height: 3px;
		background: var(--gold);
		border-radius: 2px;
	}

	.info-text p {
		color: var(--text-light);
		line-height: 1.7;
		margin-bottom: 2rem;
		font-size: var(--text-size);
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.ingredients-highlights {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.highlight {
		display: flex;
		align-items: center;
		gap: 1rem;
		background: rgba(255, 255, 255, 0.5);
		padding: clamp(0.8rem, 2vw, 1rem);
		border-radius: 15px;
		transition: all 0.3s ease;
		border: 1px solid transparent;
	}

	.highlight:hover {
		background: rgba(255, 255, 255, 0.8);
		border-color: var(--chocolate-light);
	}

	.highlight-icon {
		font-size: clamp(1.2rem, 3vw, 1.5rem);
	}

	.highlight span:last-child {
		font-weight: 600;
		color: var(--chocolate-dark);
		font-size: var(--text-size);
	}

	.info-visual {
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
		height: clamp(200px, 30vw, 250px);
		width: 100%;
	}

	.chef-hat {
		font-size: clamp(4rem, 12vw, 6rem);
		position: relative;
		z-index: 2;
		animation: bounce 2s ease-in-out infinite;
	}

	.floating-ingredients {
		position: absolute;
		width: 100%;
		height: 100%;
	}

	.ingredient {
		position: absolute;
		font-size: clamp(1.5rem, 4vw, 2rem);
		animation: float 3s ease-in-out infinite;
	}

	.ingredient:nth-child(1) {
		top: 20%;
		left: 20%;
		animation-delay: 0s;
	}

	.ingredient:nth-child(2) {
		top: 30%;
		right: 15%;
		animation-delay: 1s;
	}

	.ingredient:nth-child(3) {
		bottom: 25%;
		left: 15%;
		animation-delay: 2s;
	}

	/* Animations */
	@keyframes float {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-15px); }
	}

	@keyframes bounce {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-8px); }
	}

	/* Responsive Design with Enhanced Breakpoints */
	
	/* Large Tablets and Small Desktops */
	@media (max-width: 1024px) {
		.menu-grid {
			grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		}
		
		.info-content {
			gap: 2rem;
		}
	}

	/* Tablets */
	@media (max-width: 768px) {
		.menu-grid {
			grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		}

		.info-content {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.info-text h2::after {
			left: 50%;
			transform: translateX(-50%);
		}

		.ingredients-highlights {
			max-width: 400px;
			margin: 0 auto;
		}
	}

	/* Small Tablets and Large Phones */
	@media (max-width: 640px) {
		.menu-grid {
			grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
		}
	}

	/* Mobile Phones */
	@media (max-width: 480px) {
		:root {
			--container-padding: 1rem;
			--section-padding: 2rem;
		}

		.menu-grid {
			grid-template-columns: 1fr;
		}

		.menu-item {
			padding: 1.5rem 1rem;
		}

		.menu-badge {
			top: 10px;
			right: 10px;
			padding: 0.25rem 0.5rem;
		}
	}

	/* Small Mobile Phones */
	@media (max-width: 360px) {
		:root {
			--container-padding: 0.75rem;
			--section-padding: 1.5rem;
		}

		.menu-item {
			padding: 1.25rem 0.75rem;
		}

		.menu-badge {
			top: 8px;
			right: 8px;
			padding: 0.2rem 0.4rem;
		}
	}

	/* Very Small Screens */
	@media (max-width: 320px) {
		:root {
			--container-padding: 0.5rem;
		}

		.menu-item {
			padding: 1rem 0.5rem;
		}

		.highlight {
			padding: 0.6rem;
		}
	}

	/* High DPI Displays */
	@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
		.menu-icon {
			image-rendering: -webkit-optimize-contrast;
			image-rendering: crisp-edges;
		}
	}

	/* Landscape orientation for mobile */
	@media (max-height: 500px) and (orientation: landscape) {
		.menu-hero {
			padding: 1.5rem 0;
		}

		.info-visual {
			height: 150px;
		}
	}

	/* Reduced motion preferences */
	@media (prefers-reduced-motion: reduce) {
		.menu-icon,
		.chef-hat,
		.ingredient {
			animation: none;
		}
		
		.menu-hero::before {
			animation: none;
		}
	}

	/* Print styles */
	@media print {
		.menu-hero,
		.menu-info {
			padding: 1rem 0;
		}
		
		.menu-badge {
			border: 1px solid #000;
			color: #000 !important;
			background: transparent !important;
		}
		
		.menu-icon {
			filter: none;
		}
	}
</style>