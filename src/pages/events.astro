<style>
	/* CSS Custom Properties for Better Responsiveness */
	:root {
		--container-padding: clamp(1rem, 5vw, 2rem);
		--section-padding: clamp(2rem, 8vw, 4rem);
		--hero-title-size: clamp(2.5rem, 8vw, 4rem);
		--hero-subtitle-size: clamp(1rem, 3vw, 1.2rem);
		--section-title-size: clamp(1.8rem, 5vw, 2.5rem);
		--card-title-size: clamp(1.3rem, 4vw, 1.8rem);
		--text-size: clamp(0.875rem, 2.5vw, 1rem);
		--event-icon-size: clamp(2.5rem, 8vw, 3.5rem);
	}

	/* Add global box-sizing and overflow prevention */
	* {
		box-sizing: border-box;
	}

	html, body {
		overflow-x: hidden;
		max-width: 100vw;
	}

	/* Events Hero */
	.events-hero {
		background: linear-gradient(135deg, var(--cream) 0%, var(--beige-light) 50%, var(--beige-dark) 100%);
		padding: var(--section-padding) 0;
		text-align: center;
		position: relative;
		overflow: hidden;
		width: 100%;
	}

	.events-hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="25" cy="25" r="1" fill="rgba(60,36,21,0.1)"/><circle cx="75" cy="45" r="1.5" fill="rgba(60,36,21,0.1)"/><circle cx="45" cy="85" r="1" fill="rgba(60,36,21,0.1)"/></svg>');
		animation: float 30s ease-in-out infinite;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--container-padding);
		width: 100%;
		box-sizing: border-box;
		position: relative;
		z-index: 1;
	}

	.hero-title {
		font-family: 'Dancing Script', cursive;
		font-size: var(--hero-title-size);
		font-weight: 700;
		color: var(--chocolate-dark);
		margin-bottom: 1rem;
		text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.hero-subtitle {
		font-size: var(--hero-subtitle-size);
		color: var(--chocolate-medium);
		opacity: 0.9;
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	/* Events Info */
	.events-info {
		padding: var(--section-padding) 0;
		background: var(--warm-white);
		width: 100%;
		overflow: hidden;
	}

	.info-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: clamp(2rem, 5vw, 3rem);
		align-items: center;
		width: 100%;
	}

	.info-text h2 {
		font-family: 'Dancing Script', cursive;
		font-size: var(--section-title-size);
		color: var(--chocolate-dark);
		margin-bottom: 1.5rem;
		position: relative;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.info-text h2::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 0;
		width: clamp(50px, 12vw, 60px);
		height: 3px;
		background: var(--gold);
		border-radius: 2px;
	}

	.info-text p {
		color: var(--text-light);
		line-height: 1.7;
		margin-bottom: 1.5rem;
		font-size: var(--text-size);
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.info-text strong {
		color: var(--chocolate-dark);
		font-weight: 600;
	}

	.info-visual {
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
		height: clamp(200px, 30vw, 250px);
		width: 100%;
	}

	.calendar-icon {
		font-size: clamp(4rem, 12vw, 6rem);
		position: relative;
		z-index: 2;
		animation: pulse 3s ease-in-out infinite;
	}

	.floating-icons {
		position: absolute;
		width: 100%;
		height: 100%;
	}

	.floating-icons span {
		position: absolute;
		font-size: clamp(1.5rem, 4vw, 2rem);
		animation: float 3s ease-in-out infinite;
	}

	.floating-icons span:nth-child(1) {
		top: 20%;
		left: 20%;
		animation-delay: 0s;
	}

	.floating-icons span:nth-child(2) {
		top: 30%;
		right: 15%;
		animation-delay: 1s;
	}

	.floating-icons span:nth-child(3) {
		bottom: 25%;
		left: 15%;
		animation-delay: 2s;
	}

	/* Upcoming Events */
	.upcoming-events {
		padding: var(--section-padding) 0;
		background: linear-gradient(135deg, var(--beige-light) 0%, var(--cream) 100%);
		width: 100%;
		overflow: hidden;
	}

	.section-title {
		font-family: 'Dancing Script', cursive;
		font-size: var(--section-title-size);
		color: var(--chocolate-dark);
		text-align: center;
		margin-bottom: 3rem;
		position: relative;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.section-title::after {
		content: '';
		position: absolute;
		bottom: -15px;
		left: 50%;
		transform: translateX(-50%);
		width: clamp(60px, 15vw, 80px);
		height: 4px;
		background: var(--gold);
		border-radius: 2px;
	}

	.events-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(min(300px, 100%), 1fr));
		gap: clamp(1.5rem, 4vw, 2rem);
		width: 100%;
	}

	.event-card {
		background: linear-gradient(135deg, var(--cream), var(--beige-light));
		padding: clamp(1.5rem, 4vw, 2rem);
		border-radius: 20px;
		text-align: center;
		box-shadow: 0 8px 25px rgba(60, 36, 21, 0.1);
		transition: all 0.3s ease;
		border: 2px solid transparent;
		position: relative;
		overflow: hidden;
		width: 100%;
		box-sizing: border-box;
	}

	.event-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
		background: linear-gradient(90deg, var(--chocolate-light), var(--chocolate-medium));
		transform: scaleX(0);
		transition: transform 0.3s ease;
	}

	.event-card:hover {
		box-shadow: 0 15px 35px rgba(60, 36, 21, 0.2);
		border-color: var(--chocolate-light);
	}

	.event-card:hover::before {
		transform: scaleX(1);
	}

	.event-status {
		position: absolute;
		top: 15px;
		right: 15px;
		background: var(--gold);
		color: var(--chocolate-dark);
		padding: clamp(0.3rem, 1vw, 0.5rem) clamp(0.6rem, 2vw, 0.8rem);
		border-radius: 15px;
		font-size: clamp(0.6rem, 2vw, 0.75rem);
		font-weight: 600;
		text-transform: uppercase;
	}

	.event-icon {
		font-size: var(--event-icon-size);
		margin-bottom: 1rem;
		display: block;
		animation: bounce 2s ease-in-out infinite;
	}

	.event-card h3 {
		font-family: 'Dancing Script', cursive;
		font-size: var(--card-title-size);
		color: var(--chocolate-dark);
		margin-bottom: 0.5rem;
		line-height: 1.2;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.event-date {
		font-weight: 600;
		color: var(--chocolate-medium);
		margin-bottom: 1rem;
		font-size: var(--text-size);
	}

	.event-card p {
		color: var(--text-light);
		line-height: 1.6;
		font-size: var(--text-size);
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	/* Private Events */
	.private-events {
		padding: var(--section-padding) 0;
		background: var(--warm-white);
		width: 100%;
		overflow: hidden;
	}

	.private-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: clamp(2rem, 5vw, 3rem);
		align-items: center;
		width: 100%;
	}

	.private-visual {
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
		height: clamp(200px, 30vw, 250px);
		width: 100%;
	}

	.party-icon {
		font-size: clamp(4rem, 12vw, 6rem);
		position: relative;
		z-index: 2;
		animation: pulse 3s ease-in-out infinite;
	}

	.celebration-icons {
		position: absolute;
		width: 100%;
		height: 100%;
	}

	.celebration-icons span {
		position: absolute;
		font-size: clamp(1.5rem, 4vw, 2rem);
		animation: float 3s ease-in-out infinite;
	}

	.celebration-icons span:nth-child(1) {
		top: 20%;
		left: 20%;
		animation-delay: 0s;
	}

	.celebration-icons span:nth-child(2) {
		top: 30%;
		right: 15%;
		animation-delay: 1s;
	}

	.celebration-icons span:nth-child(3) {
		bottom: 25%;
		left: 15%;
		animation-delay: 2s;
	}

	.private-text h2 {
		font-family: 'Dancing Script', cursive;
		font-size: var(--section-title-size);
		color: var(--chocolate-dark);
		margin-bottom: 1.5rem;
		position: relative;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.private-text h2::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 0;
		width: clamp(50px, 12vw, 60px);
		height: 3px;
		background: var(--gold);
		border-radius: 2px;
	}

	.private-text p {
		color: var(--text-light);
		line-height: 1.7;
		margin-bottom: 2rem;
		font-size: var(--text-size);
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.private-text strong {
		color: var(--chocolate-dark);
		font-weight: 600;
	}

	.services-list {
		list-style: none;
		padding: 0;
		margin: 0 0 2rem 0;
	}

	.services-list li {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 0.75rem;
		font-size: var(--text-size);
		color: var(--text-light);
		line-height: 1.6;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	/* Button Styles */
	.btn {
		padding: clamp(0.8rem, 2.5vw, 1rem) clamp(1.5rem, 4vw, 2rem);
		border-radius: 50px;
		text-decoration: none;
		font-weight: 600;
		transition: all 0.3s ease;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		border: 2px solid transparent;
		font-size: clamp(0.875rem, 2.5vw, 0.95rem);
		box-sizing: border-box;
		min-height: 44px; /* Touch target size */
	}

	.btn-primary {
		background: linear-gradient(45deg, var(--chocolate-medium), var(--chocolate-dark));
		color: var(--warm-white);
		box-shadow: 0 4px 15px rgba(60, 36, 21, 0.3);
	}

	.btn-primary:hover {
		box-shadow: 0 6px 20px rgba(60, 36, 21, 0.4);
		background: linear-gradient(45deg, var(--chocolate-dark), var(--chocolate-medium));
	}

	.btn-icon {
		font-size: 1rem;
	}

	/* Animations */
	@keyframes float {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-15px); }
	}

	@keyframes bounce {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-8px); }
	}

	@keyframes pulse {
		0%, 100% { transform: scale(1); }
		50% { transform: scale(1.05); }
	}

	/* Responsive Design with Enhanced Breakpoints */
	
	/* Large Tablets and Small Desktops */
	@media (max-width: 1024px) {
		.events-grid {
			grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		}
		
		.info-content,
		.private-content {
			gap: 2rem;
		}
	}

	/* Tablets */
	@media (max-width: 768px) {
		.info-content,
		.private-content {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.info-text h2::after,
		.private-text h2::after {
			left: 50%;
			transform: translateX(-50%);
		}

		.events-grid {
			grid-template-columns: 1fr;
		}

		.services-list {
			max-width: 400px;
			margin: 0 auto 2rem;
		}
	}

	/* Small Tablets and Large Phones */
	@media (max-width: 640px) {
		.btn {
			width: 100%;
			max-width: 280px;
			justify-content: center;
		}

		.private-text {
			text-align: center;
		}
	}

	/* Mobile Phones */
	@media (max-width: 480px) {
		:root {
			--container-padding: 1rem;
			--section-padding: 2rem;
		}

		.event-card {
			padding: 1.5rem 1rem;
		}

		.event-status {
			top: 10px;
			right: 10px;
			padding: 0.25rem 0.5rem;
		}

		.services-list li {
			margin-bottom: 0.5rem;
		}
	}

	/* Small Mobile Phones */
	@media (max-width: 360px) {
		:root {
			--container-padding: 0.75rem;
			--section-padding: 1.5rem;
		}

		.event-card {
			padding: 1.25rem 0.75rem;
		}

		.event-status {
			top: 8px;
			right: 8px;
			padding: 0.2rem 0.4rem;
		}
	}

	/* Very Small Screens */
	@media (max-width: 320px) {
		:root {
			--container-padding: 0.5rem;
		}

		.event-card {
			padding: 1rem 0.5rem;
		}

		.services-list li {
			gap: 0.5rem;
		}
	}

	/* High DPI Displays */
	@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
		.event-icon,
		.calendar-icon,
		.party-icon {
			image-rendering: -webkit-optimize-contrast;
			image-rendering: crisp-edges;
		}
	}

	/* Landscape orientation for mobile */
	@media (max-height: 500px) and (orientation: landscape) {
		.events-hero {
			padding: 1.5rem 0;
		}

		.info-visual,
		.private-visual {
			height: 150px;
		}
	}

	/* Reduced motion preferences */
	@media (prefers-reduced-motion: reduce) {
		.event-icon,
		.calendar-icon,
		.party-icon,
		.floating-icons span,
		.celebration-icons span {
			animation: none;
		}
		
		.events-hero::before {
			animation: none;
		}
	}

	/* Print styles */
	@media print {
		.events-hero,
		.events-info,
		.upcoming-events,
		.private-events {
			padding: 1rem 0;
		}
		
		.btn {
			border: 1px solid #000;
			color: #000 !important;
			background: transparent !important;
		}
		
		.event-status {
			border: 1px solid #000;
			color: #000 !important;
			background: transparent !important;
		}
		
		.event-icon,
		.calendar-icon,
		.party-icon {
			filter: none;
		}
	}
</style>