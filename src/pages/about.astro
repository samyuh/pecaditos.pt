<style>
	/* CSS Custom Properties for Better Responsiveness */
	:root {
		--container-padding: clamp(1rem, 5vw, 2rem);
		--section-padding: clamp(2rem, 8vw, 4rem);
		--hero-title-size: clamp(2.5rem, 8vw, 4rem);
		--hero-subtitle-size: clamp(1rem, 3vw, 1.2rem);
		--section-title-size: clamp(1.8rem, 5vw, 2.5rem);
		--card-title-size: clamp(1.3rem, 4vw, 1.8rem);
		--text-size: clamp(0.875rem, 2.5vw, 1rem);
		--value-icon-size: clamp(2.5rem, 8vw, 3.5rem);
	}

	/* Add global box-sizing and overflow prevention */
	* {
		box-sizing: border-box;
	}

	html, body {
		overflow-x: hidden;
		max-width: 100vw;
	}

	/* About Hero */
	.about-hero {
		background: linear-gradient(135deg, var(--cream) 0%, var(--beige-light) 50%, var(--beige-dark) 100%);
		padding: var(--section-padding) 0;
		text-align: center;
		position: relative;
		overflow: hidden;
		width: 100%;
	}

	.about-hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="1" fill="rgba(60,36,21,0.1)"/><circle cx="80" cy="40" r="1.5" fill="rgba(60,36,21,0.1)"/><circle cx="40" cy="80" r="1" fill="rgba(60,36,21,0.1)"/></svg>');
		animation: float 25s ease-in-out infinite;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--container-padding);
		width: 100%;
		box-sizing: border-box;
		position: relative;
		z-index: 1;
	}

	.hero-content {
		text-align: center;
	}

	.hero-title {
		font-family: 'Dancing Script', cursive;
		font-size: var(--hero-title-size);
		font-weight: 700;
		color: var(--chocolate-dark);
		margin-bottom: 1rem;
		text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.hero-subtitle {
		font-size: var(--hero-subtitle-size);
		color: var(--chocolate-medium);
		opacity: 0.9;
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	/* Our Story Section */
	.our-story {
		padding: var(--section-padding) 0;
		background: var(--warm-white);
		width: 100%;
		overflow: hidden;
	}

	.story-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: clamp(2rem, 5vw, 3rem);
		align-items: center;
		width: 100%;
	}

	.story-text h2 {
		font-family: 'Dancing Script', cursive;
		font-size: var(--section-title-size);
		color: var(--chocolate-dark);
		margin-bottom: 1.5rem;
		position: relative;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.story-text h2::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 0;
		width: clamp(50px, 12vw, 60px);
		height: 3px;
		background: var(--gold);
		border-radius: 2px;
	}

	.story-text p {
		color: var(--text-light);
		line-height: 1.7;
		margin-bottom: 1.5rem;
		font-size: var(--text-size);
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.story-visual {
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
		height: clamp(200px, 30vw, 300px);
		width: 100%;
	}

	.couple-illustration {
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
		width: clamp(150px, 40vw, 200px);
		height: clamp(150px, 40vw, 200px);
		background: linear-gradient(135deg, var(--cream), var(--beige-light));
		border-radius: 50%;
		box-shadow: 0 15px 30px rgba(60, 36, 21, 0.1);
	}

	.couple-emoji {
		font-size: clamp(2.5rem, 8vw, 3.5rem);
		animation: bounce 2s ease-in-out infinite;
	}

	.heart-float,
	.sparkles {
		position: absolute;
		font-size: clamp(1.5rem, 4vw, 2rem);
		animation: float 3s ease-in-out infinite;
	}

	.heart-float {
		top: -10%;
		right: -10%;
		animation-delay: 0s;
	}

	.sparkles {
		bottom: -10%;
		left: -10%;
		animation-delay: 1.5s;
	}

	/* Our Mission Section */
	.our-mission {
		padding: var(--section-padding) 0;
		background: linear-gradient(135deg, var(--beige-light) 0%, var(--cream) 100%);
		width: 100%;
		overflow: hidden;
	}

	.mission-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: clamp(2rem, 5vw, 3rem);
		align-items: center;
		width: 100%;
	}

	.mission-visual {
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
		height: clamp(200px, 30vw, 250px);
		width: 100%;
		order: 1;
	}

	.mission-icon {
		font-size: clamp(4rem, 12vw, 6rem);
		position: relative;
		z-index: 2;
		animation: pulse 3s ease-in-out infinite;
	}

	.floating-elements {
		position: absolute;
		width: 100%;
		height: 100%;
	}

	.float-element {
		position: absolute;
		font-size: clamp(1.5rem, 4vw, 2rem);
		animation: float 3s ease-in-out infinite;
	}

	.float-element:nth-child(1) {
		top: 20%;
		left: 20%;
		animation-delay: 0s;
	}

	.float-element:nth-child(2) {
		top: 30%;
		right: 15%;
		animation-delay: 1s;
	}

	.float-element:nth-child(3) {
		bottom: 25%;
		left: 15%;
		animation-delay: 2s;
	}

	.mission-text {
		order: 2;
	}

	.mission-text h2 {
		font-family: 'Dancing Script', cursive;
		font-size: var(--section-title-size);
		color: var(--chocolate-dark);
		margin-bottom: 1.5rem;
		position: relative;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.mission-text h2::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 0;
		width: clamp(50px, 12vw, 60px);
		height: 3px;
		background: var(--gold);
		border-radius: 2px;
	}

	.mission-text p {
		color: var(--text-light);
		line-height: 1.7;
		margin-bottom: 1.5rem;
		font-size: var(--text-size);
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.mission-text strong {
		color: var(--chocolate-dark);
		font-weight: 600;
	}

	.mission-highlights {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		margin-top: 2rem;
	}

	.highlight {
		display: flex;
		align-items: center;
		gap: 1rem;
		background: rgba(255, 255, 255, 0.5);
		padding: clamp(0.8rem, 2vw, 1rem);
		border-radius: 15px;
		transition: all 0.3s ease;
		border: 1px solid transparent;
	}

	.highlight:hover {
		background: rgba(255, 255, 255, 0.8);
		border-color: var(--chocolate-light);
	}

	.highlight-icon {
		font-size: clamp(1.2rem, 3vw, 1.5rem);
	}

	.highlight span:last-child {
		font-weight: 600;
		color: var(--chocolate-dark);
		font-size: var(--text-size);
	}

	/* Our Values Section */
	.our-values {
		padding: var(--section-padding) 0;
		background: var(--warm-white);
		width: 100%;
		overflow: hidden;
	}

	.section-title {
		font-family: 'Dancing Script', cursive;
		font-size: var(--section-title-size);
		color: var(--chocolate-dark);
		text-align: center;
		margin-bottom: 3rem;
		position: relative;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.section-title::after {
		content: '';
		position: absolute;
		bottom: -15px;
		left: 50%;
		transform: translateX(-50%);
		width: clamp(60px, 15vw, 80px);
		height: 4px;
		background: var(--gold);
		border-radius: 2px;
	}

	.values-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(min(280px, 100%), 1fr));
		gap: clamp(1.5rem, 4vw, 2rem);
		width: 100%;
	}

	.value-card {
		background: linear-gradient(135deg, var(--cream), var(--beige-light));
		padding: clamp(1.5rem, 4vw, 2rem);
		border-radius: 20px;
		text-align: center;
		box-shadow: 0 8px 25px rgba(60, 36, 21, 0.1);
		transition: all 0.3s ease;
		border: 2px solid transparent;
		position: relative;
		overflow: hidden;
		width: 100%;
		box-sizing: border-box;
	}

	.value-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
		background: linear-gradient(90deg, var(--chocolate-light), var(--chocolate-medium));
		transform: scaleX(0);
		transition: transform 0.3s ease;
	}

	.value-card:hover {
		box-shadow: 0 15px 35px rgba(60, 36, 21, 0.2);
		border-color: var(--chocolate-light);
	}

	.value-card:hover::before {
		transform: scaleX(1);
	}

	.value-icon {
		font-size: var(--value-icon-size);
		margin-bottom: 1rem;
		display: block;
		animation: bounce 2s ease-in-out infinite;
	}

	.value-card h3 {
		font-family: 'Dancing Script', cursive;
		font-size: var(--card-title-size);
		color: var(--chocolate-dark);
		margin-bottom: 1rem;
		line-height: 1.2;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.value-card p {
		color: var(--text-light);
		line-height: 1.6;
		font-size: var(--text-size);
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	/* Animations */
	@keyframes float {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-15px); }
	}

	@keyframes bounce {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-8px); }
	}

	@keyframes pulse {
		0%, 100% { transform: scale(1); }
		50% { transform: scale(1.05); }
	}

	/* Responsive Design with Enhanced Breakpoints */
	
	/* Large Tablets and Small Desktops */
	@media (max-width: 1024px) {
		.values-grid {
			grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		}
		
		.story-content,
		.mission-content {
			gap: 2rem;
		}
	}

	/* Tablets */
	@media (max-width: 768px) {
		.story-content,
		.mission-content {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.story-text h2::after,
		.mission-text h2::after {
			left: 50%;
			transform: translateX(-50%);
		}

		.mission-visual {
			order: -1;
		}

		.mission-highlights {
			max-width: 400px;
			margin: 2rem auto 0;
		}

		.values-grid {
			grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		}
	}

	/* Small Tablets and Large Phones */
	@media (max-width: 640px) {
		.values-grid {
			grid-template-columns: 1fr;
		}
	}

	/* Mobile Phones */
	@media (max-width: 480px) {
		:root {
			--container-padding: 1rem;
			--section-padding: 2rem;
		}

		.value-card {
			padding: 1.5rem 1rem;
		}

		.mission-highlights {
			gap: 0.75rem;
		}

		.highlight {
			padding: 0.75rem;
		}
	}

	/* Small Mobile Phones */
	@media (max-width: 360px) {
		:root {
			--container-padding: 0.75rem;
			--section-padding: 1.5rem;
		}

		.value-card {
			padding: 1.25rem 0.75rem;
		}

		.highlight {
			padding: 0.6rem;
		}
	}

	/* Very Small Screens */
	@media (max-width: 320px) {
		:root {
			--container-padding: 0.5rem;
		}

		.value-card {
			padding: 1rem 0.5rem;
		}

		.highlight {
			padding: 0.5rem;
			gap: 0.75rem;
		}
	}

	/* High DPI Displays */
	@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
		.couple-illustration,
		.value-icon {
			image-rendering: -webkit-optimize-contrast;
			image-rendering: crisp-edges;
		}
	}

	/* Landscape orientation for mobile */
	@media (max-height: 500px) and (orientation: landscape) {
		.about-hero {
			padding: 1.5rem 0;
		}

		.story-visual,
		.mission-visual {
			height: 150px;
		}

		.couple-illustration {
			width: 120px;
			height: 120px;
		}
	}

	/* Reduced motion preferences */
	@media (prefers-reduced-motion: reduce) {
		.couple-emoji,
		.heart-float,
		.sparkles,
		.mission-icon,
		.float-element,
		.value-icon {
			animation: none;
		}
		
		.about-hero::before {
			animation: none;
		}
	}

	/* Print styles */
	@media print {
		.about-hero,
		.our-story,
		.our-mission,
		.our-values {
			padding: 1rem 0;
		}
		
		.value-card {
			border: 1px solid #000;
			break-inside: avoid;
		}
		
		.value-icon {
			filter: none;
		}
	}
</style>
</style>