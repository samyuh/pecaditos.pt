<style>
	/* About Hero Section */
	.about-hero {
		background: linear-gradient(135deg, var(--cream) 0%, var(--beige-light) 50%, var(--beige-dark) 100%);
		padding: 4rem 0;
		text-align: center;
		position: relative;
		overflow: hidden;
	}

	.about-hero::before {
