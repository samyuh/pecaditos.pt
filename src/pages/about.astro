	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.hero-content {
		position: relative;
		z-index: 1;
	}

	.hero-title {
		font-family: 'Dancing Script', cursive;
		font-size: 4rem;
		color: var(--chocolate-dark);
		margin-bottom: 1rem;
		text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
	}

	.hero-subtitle {
		font-size: 1.3rem;
		color: var(--chocolate-medium);
		opacity: 0.9;
		max-width: 600px;
		margin: 0 auto;
	}

	/* Our Story Section */
	.our-story {
		padding: 5rem 0;
		background: var(--warm-white);
	}

	.story-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
	}

	.story-text h2 {
		font-family: 'Dancing Script', cursive;
		font-size: 3rem;
		color: var(--chocolate-dark);
		margin-bottom: 2rem;
		position: relative;
	}

	.story-text h2::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 0;
		width: 80px;
		height: 4px;
		background: var(--gold);
		border-radius: 2px;
	}

	.story-text p {
		color: var(--text-light);
		line-height: 1.8;
		margin-bottom: 1.5rem;
		font-size: 1.1rem;
	}

	.story-text strong {
		color: var(--chocolate-dark);
		font-weight: 600;
	}

	.story-visual {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 400px;
		position: relative;
	}

	.couple-illustration {
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.heart-float {
		position: absolute;
		top: -30px;
		left: -30px;
		font-size: 3rem;
		color: var(--gold);
		animation: float 3s ease-in-out infinite;
		opacity: 0.7;
	}

	.couple-emoji {
		font-size: 5rem;
		position: relative;
		z-index: 2;
		animation: bounce 2s ease-in-out infinite;
		filter: drop-shadow(0 4px 8px rgba(0,0,0,0.1));
	}

	.sparkles {
		position: absolute;
		bottom: -30px;
		right: -30px;
		font-size: 2.5rem;
		color: var(--chocolate-light);
		animation: pulse 2s ease-in-out infinite;
		opacity: 0.8;
	}

	/* Our Mission Section */
	.our-mission {
		padding: 5rem 0;
		background: linear-gradient(135deg, var(--beige-light) 0%, var(--cream) 100%);
	}

